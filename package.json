{
  "name": "",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "npm run serve",
    "build": "npm run && npm run build-ts && npm run tslint && npm run build --prefix client",
    "serve": "node dist/server.js",
    "client": "npm start --prefix client",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Webpack\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run client\"",
    "heroku-postbuild": "npm install --dev && npm run build-ts && npm install --dev --prefix client && npm run build --prefix client",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.8",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/express": "^4.16.1",
    "@types/gravatar": "^1.4.28",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.10",
    "@types/node": "^9.6.41",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/validator": "^10.9.0",
    "concurrently": "^3.6.1",
    "jest": "^22.4.4",
    "nodemon": "^1.18.9",
    "ts-jest": "^22.4.6",
    "ts-node": "^5.0.1",
    "tslint": "^5.12.1",
    "typescript": "^2.9.2"
  }
}
